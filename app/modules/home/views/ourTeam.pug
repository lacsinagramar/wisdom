extends ../../../templates/master.pug
block title
    title Our Team
block content
    style(type='text/css').
        .hidden.menu {
        display: none;
        }
        .masthead.segment {
        min-height: 700px;
        padding: 1em 0em;
        }
        .masthead .logo.item img {
        margin-right: 1em;
        }
        .masthead .ui.menu .ui.button {
        margin-left: 0.5em;
        }
        .masthead h1.ui.header {
        margin-top: 3em;
        margin-bottom: 0em;
        font-size: 4em;
        font-weight: normal;
        }
        .masthead h2 {
        font-size: 1.7em;
        font-weight: normal;
        }
        .ui.vertical.stripe {
        padding: 8em 0em;
        }
        .ui.vertical.stripe h3 {
        font-size: 2em;
        }
        .ui.vertical.stripe .button + h3,
        .ui.vertical.stripe p + h3 {
        margin-top: 3em;
        }
        .ui.vertical.stripe .floated.image {
        clear: both;
        }
        .ui.vertical.stripe p {
        font-size: 1.33em;
        }
        .ui.vertical.stripe .horizontal.divider {
        margin: 3em 0em;
        }
        .quote.stripe.segment {
        padding: 0em;
        }
        .quote.stripe.segment .grid .column {
        padding-top: 5em;
        padding-bottom: 5em;
        }
        .footer.segment {
        padding: 5em 0em;
        }
        .secondary.pointing.menu .toc.item {
        display: none;
        }
        @media only screen and (max-width: 700px) {
        .ui.fixed.menu {
        display: none !important;
        }
        .secondary.pointing.menu .item,
        .secondary.pointing.menu .menu {
        display: none;
        }
        .secondary.pointing.menu .toc.item {
        display: block;
        }
        .masthead.segment {
        min-height: 350px;
        }
        .masthead h1.ui.header {
        font-size: 2em;
        margin-top: 1.5em;
        }
        .masthead h2 {
        margin-top: 0.5em;
        font-size: 1.5em;
        }
        }
    script.
    // Page Contents
    .pusher
        .ui.inverted.vertical.masthead.center.aligned.segment(style='background-image: url("/assets/images/homebg.png");')
            .ui.container
                .ui.large.secondary.inverted.simple.menu
                    a(href='/index').left.item Adventutor
                    .right.item
                        a(href='/login').ui.inverted.button Log in 
                        a(href='/signup').ui.inverted.button Sign Up
            center
                h1.inverted.ui.header Our Team
            .ui.grid
                .ui.hidden.divider
                .ui.hidden.divider
                .six.column.center.aligned.row
                    .column
                        img.ui.centered.small.circular.image(src='/assets/images/rachel.png' style='width:500px;height:200px;')
                        .ui.hidden.divider
                        .ui.large.label(style='background-color : #421f00; color: white;')
                            | Rachel Maiden C. Flores
                        p
                            | Database Engineer
                    .column
                        img.ui.centered.small.circular.image(src='/assets/images/gramar.png' style='width:500px;height:200px;')
                        .ui.hidden.divider
                        .ui.large.label(style='background-color : #133872; color: white;')
                            | Gramar Lacsina
                        p
                            | Project Leader
                    .column
                        img.ui.centered.small.circular.image(src='/assets/images/luigi.png' style='width:500px;height:200px;')
                        .ui.hidden.divider
                        .ui.large.label(style='background-color : #421f00; color: white;')
                            | Luigi Lacsina
                        p
                            | Front End Dev/ Animator
                    .column
                        img.ui.centered.small.circular.image(src='/assets/images/keynie.png' style='width:500px;height:200px;')
                        .ui.hidden.divider
                        .ui.large.label(style='background-color : #133872; color: white;')
                            | Keynie Mae M. Orial
                        p
                            | Technical Writer
                    .column
                        img.ui.centered.small.circular.image(src='/assets/images/piolo.png' style='width:500px;height:200px;')
                        .ui.hidden.divider
                        .ui.large.label(style='background-color : #421f00; color: white;')
                            | Piolo Sales
                        p
                            | Application Engineer
                    .column
                        img.ui.centered.small.circular.image(src='/assets/images/jenhel.png' style='width:500px;height:200px;')
                        .ui.hidden.divider
                        .ui.large.label(style='background-color : #133872; color: white;')
                            | Jenhel Keeanu Santos
                        p
                            | Application Engineer
            .ui.hidden.section.divider
        .ui.inverted.vertical.footer.segment
            .ui.container
                .ui.stackable.inverted.divided.equal.height.stackable.grid
                    .three.wide.column
                        h4.ui.inverted.header About
                        .ui.inverted.link.list
                            a.item(href='/team') Our Team
                            a.item(href='#') Contact Us
                            a.item(href='/mentor') Mentors
                    .seven.wide.column
                        h4.ui.inverted.header Footer Header
                        p
                            | Extra space for a call to action inside the footer that could help re-engage users.
