    style(type='text/css').
        .hidden.menu {
        display: none;
        }
        .masthead.segment {
        min-height: 700px;
        padding: 1em 0em;
        }
        .masthead .logo.item img {
        margin-right: 1em;
        }
        .masthead .ui.menu .ui.button {
        margin-left: 0.5em;
        }
        .masthead h1.ui.header {
        margin-top: 3em;
