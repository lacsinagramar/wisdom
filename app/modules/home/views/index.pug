    script.
    // Page Contents
    - var isNotStudent = typeof reqQuery.notStudent !== 'undefined' ? 'Sorry that page is for Student Users only' : '';
    - var isNotTutor = typeof reqQuery.notTutor !== 'undefined' ? 'Sorry that page is for Tutor Users only' : '';
    - var hasError = typeof reqQuery.error !== 'undefined' ? 'Something went wrong' : '';
    .pusher
        .ui.inverted.vertical.masthead.center.aligned.segment(style='background-image: url("/assets/images/homebg.png"); background-attachment: fixed;')
            .ui.container
                .ui.large.secondary.inverted.simple.menu
                    .right.item
                        if hasSessionForPug == 1
                            - console.log(userTypeForPug)
                            if userTypeForPug == 'T'
                                .item 
                                    | Welcome Tutor! 
                                    a(href='/tutor').item #{sessionUserForPug}
                            if userTypeForPug == 'S'
                                .item 
                                    | Welcome Student!
                                    a(href='/student').item #{sessionUserForPug}
                            if userTypeForPug == 'A'
                                .item 
                                    | Welcome Admin!
                                    a(href='/admin').item #{sessionUserForPug}
                        else
                            a(href='/login').ui.inverted.button Log in 
                            a(href='/signup').ui.inverted.button Sign Up
            if isNotStudent || isNotTutor || hasError
                .ui.red.message #{isNotStudent || isNotTutor || hasError}
            .ui.text.container
                br
                br
                br
                br
                br
                img.ui.image(src="/assets/logo/banner.png" style='width:700px; height:200px; align:middle;')
                h2 Gain skills and sharpen your knowledge.
                if hasSessionForPug != 1
                    a(href='/signup' style='background-color : #133872; color: white;').ui.huge.primary.button
                        | Get Started 
                        i.right.arrow.icon
        .ui.vertical.stripe.segment(style='background-color: #fcfcfc;')
            .ui.middle.aligned.stackable.grid.container
                .row
                    .eight.wide.column
                        h3.ui.header Career Development
                        p
                            | According to University of Hawaii Community College, Tutoring allows you the opportunity to develop intellectually, psychologically, and personally.
                            | Tutors mature and gain self-confidence as they work.
                            | They develop the ability to get along with others by gaining skills of communication, mediation and negotiation. 
                        h3.ui.header Keep things in place
                        p
                            | Organizing gets you where youâ€™re going. We included a planner that sorts out your schedules to keep you posted.
                    .six.wide.right.floated.column
                        img.ui.large.bordered.rounded.image(src='/assets/images/tutorimage.jpg')
                .row
                    .center.aligned.column
                        a.ui.huge.button(style='background-color : #421f00; color: white;') Check Them Out
