        padding: 0em;
        }
        .quote.stripe.segment .grid .column {
        padding-top: 5em;
        padding-bottom: 5em;
        }
        .footer.segment {
        padding: 5em 0em;
        }
        .secondary.pointing.menu .toc.item {
        display: none;
        }
        @media only screen and (max-width: 700px) {
        .ui.fixed.menu {
        display: none !important;
        }
        .secondary.pointing.menu .item,
        .secondary.pointing.menu .menu {
        display: none;
        }
        .secondary.pointing.menu .toc.item {
        display: block;
        }
        .masthead.segment {
        min-height: 350px;
        }
