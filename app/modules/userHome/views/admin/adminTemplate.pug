extends ../../../../templates/master

block content
    .template
        .ui.inverted.huge.borderless.fixed.fluid.menu(style='background-color : #133872; color: white;')
            a(href='/').header.item
                img.ui.image(src="/assets/logo/name.png" style='width:90px; height:30px; align:middle;')
            .right.menu
                .ui.simple.dropdown.item
                    span.icon
                        i.settings.icon
                    i.dropdown.icon
                    .menu
                        .header Settings
                        .divider
                        a(href='/logout').item Logout
                a(href='/admin').item Home
                a(href='/admin/profile').item Profile

        .ui.grid
            .row
                #sidebar.column
                    .ui.secondary.vertical.fluid.menu
                        a(href='/admin/subjects').item Subjects
                        a(href='/admin/users').item Users List
                        a(href='/admin/students').item Students List
                        a(href='/admin/tutors').item Tutors List
                        a(href='/admin/transactions').item Transaction List
                        a(href='/admin/reported').item Reported Users
                        a(href='/admin/banned').item Banned Users
                block loob
        style(type='text/css').
            body {
            display: relative;
            }
            .darkbrown{
                background-color: #421f00;
            }
            #sidebar {
            position: fixed;
            top: 51.8px;
            left: 0;
            bottom: 0;
            width: 16%;
            background-color: #fcfcfc;
            padding: 0px;
            }
            #sidebar .ui.menu {
            margin: 2em 0 0;
            font-size: 16px;
            }
            #sidebar .ui.menu > a.item {
            color: #603000;
            font-weight: 900;
            border-radius: 0 !important;
            }
            #sidebar .ui.menu > a.item.active {
            background-color: #337ab7;
            color: white;
            border: none !important;
            }
            #sidebar .ui.menu > a.item:hover {
            background-color: #133872;
            color: white;
            }
            #content {
            margin-left: 19%;
            width: 81%;
            margin-top: 3em;
            padding-left: 3em;
            float: left;
            }
            #content > .ui.grid {
            padding-right: 4em;
            padding-bottom: 3em;
            }
            #content h1 {
            font-size: 36px;
            }
            #content .ui.divider:not(.hidden) {
            margin: 0;
            }
            #content table.ui.table {
            border: none;
            }
            #content table.ui.table thead th {
            border-bottom: 2px solid #eee !important;
            }