extends ../../../templates/base
block title
    title Signup
block body
    style.
        .button {
        text-align: center;
        text-decoration: none;
        display: inline-block;
        border-radius:8px;
        cursor: pointer;
        opacity: 0.6;
        filter: blur(5px);
        }
        .button:hover{
            color: white;
            opacity: 1;
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
            filter : blur(0px);
        }
        .blue {
            background-color : #133872;
        }
        .brown{
            background-color : #421f00;
        }
    .ui.buttons
        a(href='/signup/tutor' style='padding: 330px 265px; width: 50%; font-size: 40px; background-color : #421f00; color: white; -webkit-transition-duration: 0.6s;').ui.button TUTOR
        a(href='/signup/student' style='padding: 330px 265px; width: 50%; font-size: 40px; background-color : #133872; color: white; -webkit-transition-duration: 0.6s;').ui.button STUDENT